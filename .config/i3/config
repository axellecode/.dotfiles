set $app App: (e) emacs, (q) qutebrowser, (w) wire-desktop, (s) slack, (t) telegram, (l) ledger, (f) firefox
bindsym $mod+c mode "$app"
mode "$app" {
        # These bindings trigger as soon as you enter the app mode
        bindsym f exec firefox
        bindsym e exec emacs
	bindsym l exec ledger-live-desktop
	bindsym s exec slack
        bindsym w exec wire-desktop
	bindsym t exec telegram-desktop
	bindsym q exec qutebrowser

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+c mode "default"
}