[bar/bottombar]
    monitor = ${env:MONITOR:}
    width = 100%
    height = 16
    bottom = true


    color1  = ${xrdb:color1}
    color2  = ${xrdb:color2}
    color3  = ${xrdb:color3}
    color4  = ${xrdb:color4}
    color5  = ${xrdb:color5}
    color6  = ${xrdb:color6}
    color7  = ${xrdb:color7}
    color8  = ${xrdb:color8}
    color9  = ${xrdb:color9}
    color10 = ${xrdb:color10}
    color11 = ${xrdb:color11}
    color12 = ${xrdb:color12}
    color13 = ${xrdb:color13}
    color14 = ${xrdb:color14}

    background = ${xrdb:background}
    foreground = ${xrdb:foreground}
    unfocus-foreground = ${self.color8}
    notify-foreground = ${self.color6}
    urgent-foreground = ${self.color1}
    separator-foreground = ${xrdb:cursorColor}

    font-0 = Open Sans:pixelsize=12;1
    font-1 = file\-icons:style=Regular:pixelsize=12;1
    font-2 = Material Icons:style=Regular:pixelsize=12;1
    font-3 = FontAwesome:style=Regular:pixelsize=12;1
    font-4 = FontAwesome5Free:style=Solid:pixelsize=12:antialias=false;3
    font-5 = FontAwesome5Brands:style=Solid:pixelsize=12:antialias=false;3
    font-6 = octicons:style=Regular:pixelsize=12;1
    font-7 = github\-octicons:style=Regular:pixelsize=12;1
    font-8 = Icons:style=Regular:pixelsize=12;1

    separator = "  :|:  "
    modules-left   = touchinterface backlight alsa cpu memory
    modules-center = i3
    modules-right  = wired-network wireless-network battery0 temperature date

    tray-position = right
    tray-padding = 5

    scroll-up = i3wm-wsnext
    scroll-down = i3wm-wsprev
    padding-left = 4
    padding-right = 2
[module/wired-network]
    type = internal/network
    interface = enp0s31f6
    label-connected =  %downspeed:0%

[module/wireless-network]
    type = internal/network
    interface = wlp0s20f3
    label-connected =  %essid% %downspeed:0%

[module/backlight]
    type = internal/backlight
    format = <label>
    label  =  %percentage%%
    label-foreground=${root.foreground}
    card = intel_backlight

[module/alsa]
    type = internal/alsa
    master-soundcard = default
    speaker-soundcard = default
    headphone-soundcard = default
    format-volume = <label-volume>
    label-volume =  %percentage%%
    label-foreground = ${root.foreground}

    label-muted =  %percentage%%
    label-muted-foreground = ${root.notify-foreground}

    master-mixer = Master
    interval = 5

[module/memory]
    type = internal/memory
    label =  %percentage_used%%

[module/cpu]
    type = internal/cpu
    format = <label>
    label =   %percentage%%

[module/temperature]
    type = internal/temperature
    interval = 0.5
    thermal-zone = 0
    warn-temperature = 60
    label =  %temperature-c%

[module/battery0]
    type = internal/battery
    battery = BAT0
    adapter = ACPI
    poll-interval = 5
    label =  %percentage%
    time-format = %H:%M

    format-charging = <animation-charging> : <label-charging>
    label-charging = %percentage%%
    animation-charging-0 = 
    animation-charging-1 = 
    animation-charging-2 = 
    animation-charging-3 = 
    animation-charging-4 = 
    animation-charging-framerate = 750

    format-discharging = <animation-discharging> : <label-discharging>
    label-discharging = %percentage%% %time%

    animation-discharging-0 = 
    animation-discharging-1 = 
    animation-discharging-2 = 
    animation-discharging-3 = 
    animation-discharging-4 = 
    ; Framerate in milliseconds
    animation-discharging-framerate = 500

[module/date]
    type = internal/date
    interval = 5

    date = "%y-%m-%d"
    time = "%H:%M"

    label = %date% %time%

[module/i3]
    type = internal/i3
    index-sort = true
    wrapping-scroll = true
    pin-workspaces = true

    label-separator = |
    label-separator-padding = 2
    label-separator-foreground = ${root.separator-foreground}

    label-unfocused-foreground = ${root.unfocus-foreground}
    label-visible-foreground   = ${root.notify-foreground}
    label-focused-foreground   = ${root.notify-foreground}
    label-urgent-foreground    = ${root.urgent-foreground}

[module/touchinterface]
   type=custom/text
   content = "A"
   content-foreground=${root.foreground}
   click-left = $HOME/bin/starttouchbar
