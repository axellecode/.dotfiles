[bar/bottombar]
    monitor = ${env:MONITOR:eDP1}
    width = 100%
    height = 18
    bottom = true

    background = ${xrdb:background}
    foreground = ${xrdb:color6}

    font-0 = Open Sans:pixelsize=11;1
    font-1 = file\-icons:style=Regular:pixelsize=10;1
    font-2 = FontAwesome:style=Regular:pixelsize=10;1
    font-3 = Material Icons:style=Regular:pixelsize=10;1
    font-4 = octicons:style=Regular:pixelsize=10;1
    font-5 = github\-octicons:style=Regular:pixelsize=10;1
    font-6 = Icons:style=Regular:pixelsize=10;1


    separator = "     :|:     "
    modules-left   = battery0 battery1 temperature cpu memory
    modules-center = i3
    modules-right  = wired-network wireless-network backlight alsa date

    tray-position = right
    tray-padding = 5

    scroll-up = i3wm-wsnext
    scroll-down = i3wm-wsprev

[module/alsa]
    type = internal/alsa
    master-soundcard = default
    speaker-soundcard = default
    headphone-soundcard = default
    format-volume = <label-volume>
    label-volume =  %percentage%%

    label-muted =  %percentage%%
    label-muted-foreground = ${xrdb:color8}

    master-mixer = Master
    interval = 5

[module/wired-network]
    type = internal/network
    interface = enp0s25
    label-connected =  %downspeed:0%
[module/wireless-network]
    type = internal/network
    interface = wlp3s0
    label-connected =  %essid% %downspeed:0%
[module/backlight]
    format = <label>
    label  =  %percentage%%
    type = internal/backlight
    card = intel_backlight

[module/memory]
    type = internal/memory
    label =  %percentage_used%%

[module/cpu]
    type = internal/cpu
    format = <label>
    label =   %percentage%%

[module/temperature]
    type = internal/temperature
    interval = 0.5
    thermal-zone = 0
    warn-temperature = 60
    label =  %temperature-c%

[module/battery0]
    type = internal/battery
    battery = BAT0
    adapter = ACPI
    poll-interval = 5
    label =  %percentage%

    format-charging = BAT0 : <animation-charging> <label-charging>
    label-charging = %percentage%%
    animation-charging-0 = 
    animation-charging-1 = 
    animation-charging-2 = 
    animation-charging-3 = 
    animation-charging-4 = 
    animation-charging-framerate = 750

    format-discharging = BAT0 : <animation-discharging> <label-discharging>
    label-discharging = %percentage%%

    animation-discharging-0 = 
    animation-discharging-1 = 
    animation-discharging-2 = 
    animation-discharging-3 = 
    animation-discharging-4 = 
    ; Framerate in milliseconds
    animation-discharging-framerate = 500

[module/battery1]
    type = internal/battery
    battery = BAT1
    adapter = ACPI
    poll-interval = 5
    label =  %percentage%

    format-charging = BAT1 : <animation-charging> <label-charging>
    label-charging = %percentage%%
    animation-charging-0 = 
    animation-charging-1 = 
    animation-charging-2 = 
    animation-charging-3 = 
    animation-charging-4 = 
    animation-charging-framerate = 750

    format-discharging = BAT1 : <animation-discharging> <label-discharging>
    label-discharging = %percentage%%

    animation-discharging-0 = 
    animation-discharging-1 = 
    animation-discharging-2 = 
    animation-discharging-3 = 
    animation-discharging-4 = 
    ; Framerate in milliseconds
    animation-discharging-framerate = 500

[module/i3]
    type = internal/i3
    index-sort = true
    wrapping-scroll = true
    pin-workspaces = true


    label-separator = |
    label-separator-padding = 2
    label-separator-foreground = ${xrdb:foreground}

    label-unfocused-foreground = ${xrdb:color8}
    label-visible-foreground   = ${xrdb:color6}
    label-focused-foreground   = ${xrdb:color6}
    label-urgent-foreground    = ${xrdb:color1}

[module/date]
    type = internal/date
    interval = 5

    date = "%Y-%m-%d"
    time = " %H:%M"

    label = %date% %time%
