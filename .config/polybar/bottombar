[bar/bottombar]
    monitor = ${env:MONITOR:eDP1}
    width = 100%
    height = 22
    bottom = true

    background = ${xrdb:background}
    foreground = ${xrdb:color6}

    font-0 = Open Sans:pixelsize=14;1
    font-1 = file\-icons:style=Regular:pixelsize=14;1
    font-2 = FontAwesome:style=Regular:pixelsize=14;1
    font-3 = FontAwesome5Free:style=Solid:pixelsize=14:antialias=false;3
    font-4 = FontAwesome5Brands:style=Solid:pixelsize=14:antialias=false;3
    font-5 = Material Icons:style=Regular:pixelsize=14;1
    font-6 = octicons:style=Regular:pixelsize=14;1
    font-7 = github\-octicons:style=Regular:pixelsize=14;1
    font-8 = Icons:style=Regular:pixelsize=14;1

    separator = " :|: "
    separator-foreground = ${xrdb:foreground}
    modules-left   = touchbrightdown backlight touchbrightup touchvoldown alsa touchvolup
    ;; cpu memory
    modules-center = i3 i3touchmenu touchredraw  touchkeyboard
    modules-right  = wired-network wireless-network battery0 temperature date

    tray-position = right
    tray-padding = 5

    scroll-up = i3wm-wsnext
    scroll-down = i3wm-wsprev

[module/alsa]
    type = internal/alsa
    master-soundcard = default
    speaker-soundcard = default
    headphone-soundcard = default
    format-volume = <label-volume>
    label-volume =  %percentage%%

    label-muted =  %percentage%%
    label-muted-foreground = ${xrdb:color8}

    master-mixer = Master
    interval = 5

[module/wired-network]
    type = internal/network
    interface = enp0s31f6
    label-connected =  %downspeed:0%

[module/wireless-network]
    type = internal/network
    interface = wlp0s20f3
    label-connected =  %essid% %downspeed:0%

[module/backlight]
    type = internal/backlight
    format = <label>
    label  =  %percentage%%
    card = intel_backlight

[module/touchbrightdown]
   ;; Brightness down
   type=custom/text
   content=
   content-foreground=${xrdb:color8}
   click-left=xbacklight -dec 10

[module/touchbrightup]
;; Brightness up
type=custom/text
content= 
content-foreground=${xrdb:color8}
click-left=xbacklight -inc 10

[module/memory]
    type = internal/memory
    label =  %percentage_used%%

[module/cpu]
    type = internal/cpu
    format = <label>
    label =   %percentage%%

[module/temperature]
    type = internal/temperature
    interval = 0.5
    thermal-zone = 0
    warn-temperature = 60
    label =  %temperature-c%

[module/battery0]
    type = internal/battery
    battery = BAT0
    adapter = ACPI
    poll-interval = 5
    label =  %percentage%
    time-format = %H:%M

    format-charging = <animation-charging> : <label-charging>
    label-charging = %percentage%%
    animation-charging-0 = 
    animation-charging-1 = 
    animation-charging-2 = 
    animation-charging-3 = 
    animation-charging-4 = 
    animation-charging-framerate = 750

    format-discharging = <animation-discharging> : <label-discharging>
    label-discharging = %percentage%% %time%

    animation-discharging-0 = 
    animation-discharging-1 = 
    animation-discharging-2 = 
    animation-discharging-3 = 
    animation-discharging-4 = 
    ; Framerate in milliseconds
    animation-discharging-framerate = 500

[module/i3]
    type = internal/i3
    index-sort = true
    wrapping-scroll = true
    pin-workspaces = true

label-separator = |
    label-separator-padding = 2
    label-separator-foreground = ${xrdb:foreground}

    label-unfocused-foreground = ${xrdb:color8}
    label-visible-foreground   = ${xrdb:color6}
    label-focused-foreground   = ${xrdb:color6}
    label-urgent-foreground    = ${xrdb:color1}

[module/date]
    type = internal/date
    interval = 5

    date = "%Y-%m-%d"
    time = " %H:%M"

    label = %date% %time%

[module/touchvoldown]
;; Volume down
   type=custom/text
   content=""
   content-foreground= ${xrdb:color8}
   click-left=amixer -D default sset Master 5%-

[module/touchvolup]
   type=custom/text
   content=""
   content-foreground=${xrdb:color6}
   click-left=amixer -D default sset Master 5%+

[module/touchredraw]
;; Restart i3 in order to redraw polybar to fit screen orientation
   type=custom/text
   content = ""
   content-foreground=${xrdb:color8}
   click-left = i3-msg 'restart'

[module/touchkeyboard]
;; Open onscreen keyboard (onboard)
   type=custom/text
   content=""
   content-foreground=${xrdb:color8}
   click-left=dbus-send --type=method_call --print-reply --dest=org.onboard.Onboard /org/onboard/Onboard/Keyboard org.onboard.Onboard.Keyboard.ToggleVisible

[module/i3touchmenu]
type = custom/menu

expand-right = true

format-spacing = 1

;; Open the menu
label-open = "    "
label-open-foreground = ${xrdb:color8}

;; Close the menu
label-close = 
label-close-foreground = ${xrdb:color8}
label-separator = "    "
label-separator-foreground = ${xrdb:color8}

;; Launcher
menu-0-0 = 
menu-0-0-exec = menu-open-1

;; Move
menu-0-1 = 
menu-0-1-exec = menu-open-2

;; Layout
menu-0-2 = 
menu-0-2-exec = menu-open-3

;; Split
menu-0-3 = 
menu-0-3-exec = menu-open-4

;; Resize
menu-0-4 = 
menu-0-4-exec = menu-open-5

;; Move to workspace
menu-0-5 = 
menu-0-5-exec = menu-open-6

;; Kill
menu-0-6 = 
menu-0-6-exec = menu-open-7

;; Power
menu-0-7 ="    "
menu-0-7-exec = menu-open-8

;; Launcher: Back to main menu
menu-1-0 = 
menu-1-0-exec = menu-open-0

;; Launcher: chromium
menu-1-1=
menu-1-1-exec= firefox &

;; Launcher: urxvt
menu-1-2="    "
menu-1-2-exec = urxvt &

;; Move: Back to main menu
